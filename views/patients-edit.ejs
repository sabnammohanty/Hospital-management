<main class="container mx-auto p-6 mt-12 bg-white rounded shadow-lg w-[800px]">
    <h2 class="text-2xl font-bold mb-4">Edit Patient Details</h2>

    <% if (error) { %>
        <div class="bg-red-500 text-white p-2 rounded mb-4"><%= error %></div>
    <% } %>

    <form action="/patients/edit/<%= patient._id %>" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="grid grid-cols-2 gap-4">
            <!-- Name -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Full Name</label>
                <input type="text" name="name" value="<%= patient.name %>" required class="shadow border rounded w-full py-2 px-3">
            </div>

            <!-- Age -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Age</label>
                <input type="number" name="age" value="<%= patient.age %>" required class="shadow border rounded w-full py-2 px-3">
            </div>

            <!-- Gender -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Gender</label>
                <select name="gender" class="shadow border rounded w-full py-2 px-3">
                    <option value="Male" <%= patient.gender === "Male" ? "selected" : "" %>>Male</option>
                    <option value="Female" <%= patient.gender === "Female" ? "selected" : "" %>>Female</option>
                    <option value="Other" <%= patient.gender === "Other" ? "selected" : "" %>>Other</option>
                </select>
            </div>

            <!-- Contact Number -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Contact Number</label>
                <input type="text" name="contactNumber" value="<%= patient.contactNumber %>" required class="shadow border rounded w-full py-2 px-3">
            </div>

            <!-- Email -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="email" name="email" value="<%= patient.email %>" required class="shadow border rounded w-full py-2 px-3">
            </div>

            <!-- Address -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Address</label>
                <input type="text" name="address" value="<%= patient.address %>" required class="shadow border rounded w-full py-2 px-3">
            </div>

            <!-- Emergency Contact -->
            <div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Emergency Contact</label>
                <input type="text" name="emergencyContact" value="<%= patient.emergencyContact %>" required class="shadow border rounded w-full py-2 px-3">
            </div>

            <!-- Medical History -->
            <div class="col-span-2">
                <label class="block text-gray-700 text-sm font-bold mb-2">Medical History</label>
                <textarea name="diseases" placeholder="Diseases (comma separated)" class="shadow border rounded w-full py-2 px-3"><%= patient.medicalHistory.diseases.join(", ") %></textarea>
                <textarea name="allergies" placeholder="Allergies (comma separated)" class="shadow border rounded w-full py-2 px-3 mt-2"><%= patient.medicalHistory.allergies.join(", ") %></textarea>
                <textarea name="medications" placeholder="Medications (comma separated)" class="shadow border rounded w-full py-2 px-3 mt-2"><%= patient.medicalHistory.medications.join(", ") %></textarea>
            </div>
        </div>

        <div class="flex justify-between mt-6">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Update</button>
            <a href="/patients/dashboard" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Cancel</a>
        </div>
    </form>
</main>
