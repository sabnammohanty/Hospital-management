<form action="/patients/register" method="POST" class="p-6 bg-white rounded shadow-lg mx-auto w-[700px] mt-20">
    <h2 class="text-2xl font-bold mb-4">Register Patient</h2>
    
    <label>Name:</label>
    <input type="text" name="name" required class="w-full p-2 border rounded mb-2">

    <label>Age:</label>
    <input type="number" name="age" required class="w-full p-2 border rounded mb-2">

    <label>Gender:</label>
    <select name="gender" required class="w-full p-2 border rounded mb-2">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select>

    <label>Contact Number:</label>
    <input type="text" name="contactNumber" required class="w-full p-2 border rounded mb-2">

    <label>Email:</label>
    <input type="email" name="email" required class="w-full p-2 border rounded mb-2">

    <label>Address:</label>
    <input type="text" name="address" required class="w-full p-2 border rounded mb-2">

    <label>Emergency Contact:</label>
    <input type="text" name="emergencyContact" required class="w-full p-2 border rounded mb-2">

    <label>Diseases (comma-separated):</label>
    <input type="text" name="diseases" class="w-full p-2 border rounded mb-2">

    <label>Allergies (comma-separated):</label>
    <input type="text" name="allergies" class="w-full p-2 border rounded mb-2">

    <label>Medications (comma-separated):</label>
    <input type="text" name="medications" class="w-full p-2 border rounded mb-2">

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Register</button>
</form>
